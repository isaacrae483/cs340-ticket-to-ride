<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client.views.ResultsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/result"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="2"
            android:rowCount="6"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/winner"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/winningPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_holder"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player1"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/player1Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_holder"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player2"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/player2Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_holder"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/player3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player3"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/player3Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_holder"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/player4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player4"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/player4Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_holder"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/player5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player5"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/player5Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_holder"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>


        </GridLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>