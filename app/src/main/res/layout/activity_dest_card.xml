<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client.views.DestCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/DestCardList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:listitem="@layout/list_item_dest_card" />

        <Button
            android:id="@+id/drawDestCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dest_card_draw_button"
            tools:text="@string/dest_card_draw_button" />

        <TextView
            android:id="@+id/destCardsLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>